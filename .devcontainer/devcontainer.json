// For format details, see https://aka.ms/devcontainer.json
{
  "name": "Python 3",

  "build": {
    "dockerfile": "Dockerfile"
  },

  "remoteUser": "vscode",
  "updateRemoteUserUID": true,

  "runArgs": ["--gpus=all"],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker",
        "ms-python.black-formatter"
      ]
    }
  },

  "postCreateCommand": "pip install -r requirements.txt"
}
